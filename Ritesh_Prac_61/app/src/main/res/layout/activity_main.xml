<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="40sp"
        android:backgroundTint="#e91"
        android:text="b1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="150sp"
        android:layout_height="110sp"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_marginTop="25sp"
        android:backgroundTint="#e918"
        android:text="b2" />

    <Button
        android:id="@+id/b3"
        android:layout_width="140sp"
        android:layout_below="@+id/b1"
        android:layout_alignTop="@+id/b2"
        android:layout_alignRight="@+id/b1"
        android:layout_alignBottom="@+id/b2"
        android:backgroundTint="#e955"
        android:text="b3"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="180sp"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignRight="@+id/b3"
        android:layout_marginTop="25sp"
        android:backgroundTint="#e10"
        android:text="b3"
        />


</RelativeLayout>